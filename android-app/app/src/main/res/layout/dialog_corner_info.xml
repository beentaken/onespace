<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_corner_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="300dp"
    android:layout_gravity="center"
    android:padding="32dp"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/popup_corner_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="AndroidTest"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Description"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/popup_corner_info_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lasdkfdsaf\nasdfsadlf\nkasdfj" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Creator"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/popup_corner_info_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="chongos" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Created"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/popup_corner_info_created_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-11-30 10:16:19" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Location"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/popup_corner_info_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.032432, 10.33421345" />

    </LinearLayout>

    <TextView
        android:id="@+id/popup_corner_info_close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Close"
        android:textColor="@color/color_accent"
        android:textSize="16sp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_900"
    android:paddingTop="50dp"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/text_switch_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:text="Switch"/>

    <TextView
        android:id="@+id/text_switch_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/text_switch_title"
        android:paddingRight="10dp"
        android:textColor="@color/white"
        android:text="OFF"/>

    <Switch
        android:id="@+id/on_off_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/text_switch_on"
        android:paddingRight="10dp"
        android:textOff="OFF"
        android:textOn="ON"/>

    <TextView
        android:id="@+id/text_switch_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/on_off_switch"
        android:textColor="@color/white"
        android:text="ON"/>

    <TextView
        android:id="@+id/text_switch_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_switch_title"
        android:textColor="@color/white"
        android:text="*** If you switch on, the dashboard will mark this place. So when you enter the dashboard, the dashboard will show a data of this place. if you switch off, the dashboard will show a data of the place nearest."/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/line_detail"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:layout_below="@+id/text_switch_detail"/>

</RelativeLayout>


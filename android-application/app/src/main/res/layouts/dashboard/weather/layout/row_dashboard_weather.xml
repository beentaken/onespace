<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:contentPadding="15dp"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/grey_800"/>
<!--
        <TextView
            android:id="@+id/location_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon"
            android:layout_below="@+id/header_text"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/grey_800"/>
-->
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon"
            android:layout_below="@+id/header_text"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/grey_800"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon"
            android:layout_below="@+id/description"
            android:textSize="18sp"
            android:textColor="@color/grey_800"/>

        <View
            android:id="@+id/line_temp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/time"
            android:background="@color/grey_800"/>

        <TextView
            android:id="@+id/header_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/line_temp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/grey_800"/>

        <TextView
            android:id="@+id/temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_temp"
            android:paddingLeft="15dp"
            android:textSize="18sp"
            android:textColor="@color/grey_800"/>

        <TextView
            android:id="@+id/max_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/temp"
            android:paddingLeft="15dp"
            android:textSize="18sp"
            android:textColor="@color/grey_800"/>

        <TextView
            android:id="@+id/min_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/max_temp"
            android:paddingLeft="15dp"
            android:textSize="18sp"
            android:textColor="@color/grey_800"/>

        <View
            android:id="@+id/line_detail"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/min_temp"
            android:background="@color/grey_800"/>

        <TextView
            android:id="@+id/header_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/line_detail"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/grey_800"/>

        <TextView
            android:id="@+id/pressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_detail"
            android:paddingLeft="15dp"
            android:textSize="18sp"
            android:textColor="@color/grey_800"/>

        <TextView
            android:id="@+id/humidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pressure"
            android:paddingLeft="15dp"
            android:textSize="18sp"
            android:textColor="@color/grey_800"/>

        <TextView
            android:id="@+id/wind_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/humidity"
            android:paddingLeft="15dp"
            android:textSize="18sp"
            android:textColor="@color/grey_800"/>

        <TextView
            android:id="@+id/wind_direction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wind_speed"
            android:paddingLeft="15dp"
            android:textSize="18sp"
            android:textColor="@color/grey_800"/>

        <TextView
            android:id="@+id/cloudiness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wind_direction"
            android:paddingLeft="15dp"
            android:textSize="18sp"
            android:textColor="@color/grey_800"/>

        <TextView
            android:id="@+id/sunrise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cloudiness"
            android:paddingLeft="15dp"
            android:textSize="18sp"
            android:textColor="@color/grey_800"/>

        <TextView
            android:id="@+id/sunset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sunrise"
            android:paddingLeft="15dp"
            android:textSize="18sp"
            android:textColor="@color/grey_800"/>

        <View
            android:id="@+id/space_end"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/sunset"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>